{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // Backend API routes
    { "src": "/api/(.*)", "dest": "backend/index.js" },
    
    // Frontend SPA routes
    { "src": "/(.*)", "dest": "frontend/build/index.html" }
  ]
}
